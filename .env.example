# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=review-forge

# AI Provider Selection: 'openrouter' | 'oumi'
AI_PROVIDER=openrouter

# OpenRouter API Key (get from https://openrouter.ai/keys)
# Uses Qwen3-coder:free model
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Oumi Trained Model Path (used when AI_PROVIDER=oumi)
OUMI_MODEL_PATH=./oumi/models/review-scorer

# Kestra Configuration
KESTRA_API_URL=http://localhost:8080
KESTRA_API_TOKEN=your_kestra_token_here

# Database (for storing review data)
DATABASE_URL=file:./review-forge.db

# Dashboard Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Oumi Configuration
OUMI_MODEL_PATH=./oumi/models/review-scorer
OUMI_TRAINING_DATA=./oumi/data/reviews.jsonl
